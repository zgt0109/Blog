<h1>文章分类列表</h1>

<table class="ui table">
  <thead>
    <tr>
      <th>文章分类ID</th>
      <th>文章分类名称</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @article_types.each do |article_type| %>
      <tr>
        <td><%= article_type.id %></td>
        <td><%= article_type.name %></td>
        <td><%= link_to t("action.show"), admin_article_type_path(article_type) %></td>
        <td><%= link_to t("action.edit"), edit_admin_article_type_path(article_type) %></td>
        <td><%= link_to t("action.delete"), admin_article_type_path(article_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @article_types %>
<br>

<%= link_to t("action.new"), new_admin_article_type_path, class: 'ui button green' %>
