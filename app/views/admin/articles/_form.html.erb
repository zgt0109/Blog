<%= form_for [:admin, @article], html: {class: 'ui form'} do |f| %>
  <div class="field four wide">
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.label :article_type %>
      <%= f.select :article_type, Article.article_type.options,
          {include_blank: false},{class: 'ui dropdown'} %>
    </div>
    <div class="field">
      <%= f.submit class: 'ui button green'%>
    </div>
  </div>
<% end %>
