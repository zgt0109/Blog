<h1>文章列表</h1>

<table class="ui table">
  <thead>
    <tr>
      <th>文章ID</th>
      <th>文章标题</th>
      <th>文章内容</th>
      <th>文章类型</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.article_type_text %></td>
        <td><%= link_to 'Show', admin_article_path(article) %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
        <td><%= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles %>

<br>

<%= link_to 'New Article', new_admin_article_path, class: 'ui button green' %>
